{
  "permissions": {
    "allow": [
      "WebFetch(domain:docs.datadoghq.com)",
      "WebFetch(domain:docs.datadoghq.eu)",
      "WebFetch(domain:opentelemetry.io)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:pypi.org)",
      "WebSearch",
      "WebFetch(domain:www.promptfoo.dev)",
      "mcp__context7__get-library-docs"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/start-observability.sh",
            "timeout": 15000
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run $HOME/.claude/observability/.claude/hooks/send_event.py --source-app global --event-type UserPromptSubmit",
            "timeout": 5000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run $HOME/.claude/observability/.claude/hooks/send_event.py --source-app global --event-type PreToolUse",
            "timeout": 5000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run $HOME/.claude/observability/.claude/hooks/send_event.py --source-app global --event-type PostToolUse",
            "timeout": 5000
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run $HOME/.claude/observability/.claude/hooks/send_event.py --source-app global --event-type SubagentStop",
            "timeout": 5000
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "prompt-improver@claude-code-marketplace": true,
    "compounding-engineering@every-marketplace": false,
    "unit-test-generator@claude-code-plugins-plus": false,
    "integration-test-runner@claude-code-plugins-plus": false,
    "e2e-test-framework@claude-code-plugins-plus": false,
    "test-coverage-analyzer@claude-code-plugins-plus": false,
    "mutation-test-runner@claude-code-plugins-plus": false,
    "performance-test-suite@claude-code-plugins-plus": false,
    "security-test-scanner@claude-code-plugins-plus": false,
    "api-test-automation@claude-code-plugins-plus": false,
    "sql-query-optimizer@claude-code-plugins-plus": false,
    "database-health-monitor@claude-code-plugins-plus": false,
    "kubernetes-deployment-creator@claude-code-plugins-plus": false,
    "gitops-workflow-builder@claude-code-plugins-plus": false,
    "vulnerability-scanner@claude-code-plugins-plus": true,
    "secret-scanner@claude-code-plugins-plus": true,
    "superpowers@superpowers-marketplace": true
  },
  "extraKnownMarketplaces": {
    "claude-code-marketplace": {
      "source": {
        "source": "github",
        "repo": "severity1/claude-code-marketplace"
      }
    },
    "claude-code-plugins-plus": {
      "source": {
        "source": "github",
        "repo": "jeremylongshore/claude-code-plugins-plus"
      }
    },
    "every-marketplace": {
      "source": {
        "source": "github",
        "repo": "EveryInc/every-marketplace"
      }
    },
    "superpowers-marketplace": {
      "source": {
        "source": "github",
        "repo": "obra/superpowers-marketplace"
      }
    }
  },
  "alwaysThinkingEnabled": true
}
